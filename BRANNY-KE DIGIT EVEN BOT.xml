import ccxt
import numpy as np

# Your exchange credentials
API_KEY = 'YOUR_API_KEY'
SECRET_KEY = 'YOUR_SECRET_KEY'

# Initialize the exchange
exchange = ccxt.binance({
    'apiKey': API_KEY,
    'secret': SECRET_KEY,
})
def get_historical_data(symbol, timeframe='1h', limit=100):
    # Fetch the historical OHLCV data
    ohlcv = exchange.fetch_ohlcv(symbol, timeframe=timeframe, limit=limit)

    # Convert the data to a numpy array for easy manipulation
    ohlcv = np.array(ohlcv)

    return ohlcv
def trade(symbol, short_period=10, long_period=20):
    # Fetch the historical data
    historical_data = get_historical_data(symbol)

    # Calculate the short and long SMAs
    short_sma = np.mean(historical_data[:, 4], dtype=float)
    long_sma = np.mean(historical_data[:, 4], dtype=float)

    # Check if the short SMA crossed above the long SMA
    if short_sma[-1] > long_sma[-1]:
        print(f"Buy signal for {symbol}")

    # Check if the short SMA crossed below the long SMA
    elif short_sma[-1] < long_sma[-1]:
        print(f"Sell signal for {symbol}")

    # No signal otherwise
    else:
        print(f"No signal for {symbol}")
      symbol = 'BTC/USDT'
trade(symbol)
